<div class="container">
  <div class="row row-content">
    <h3>Input group with icon (large)</h3>
    <div class="input-group with-icon-addon">
      <input type="text" class="form-control" placeholder="Space name">
      <span class="input-group-addon">{{one-icon icon="space"}}</span>
    </div>
  </div>
  
  <div class="row row-content">
    <h3>Input group with icon (small)</h3>
    <div class="input-group input-group-sm with-icon-addon">
      <input type="text" class="form-control" placeholder="Space name">
      <span class="input-group-addon">{{one-icon icon="space"}}</span>
    </div>
  </div>
  
  <div class="row row-content">
    <h3>Input group with button (large)</h3>
    <div class="input-group input-group">
      <input type="text" class="form-control" placeholder="Space name">
      <span class="input-group-btn">
        <button class="btn btn-default">
          Click me!
        </button>
      </span>
    </div>
  </div>
  
  <div class="row row-content">
    <h3>Input group with buttons (small)</h3>
    <div class="input-group input-group-sm">
      <input type="text" class="form-control" placeholder="Space name">
      <span class="input-group-btn">
        <button class="btn btn-primary">
          {{one-icon icon="checked"}}
          Save
        </button>
        <button class="btn btn-default">
          {{one-icon icon="ban-left"}}
          Cancel
        </button>
      </span>
    </div>
  </div>
  
  <div class="row row-content">
    <h3>Input group with addon</h3>
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
          <div class="input-group-addon">.00</div>
        </div>
      </div>
    </form>
  </div>
  
  <div class="row row-content">
    <h3>Input group with addon (small)</h3>
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputAmount">Amount (in dollars)</label>
        <div class="input-group input-group-sm">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" id="exampleInputAmount" placeholder="Amount">
          <div class="input-group-addon">.00</div>
        </div>
      </div>
    </form>
  </div>
  
  
</div>
