{{#one-modal
  class="dummy-one-modal"
  open=opened
  size="lg"
  backdropClose=true
  keyboard=true
  onHide=(action "onHide")
  as |modal|
}}
  {{#modal.header}}
    <h1>Hello world</h1>
  {{/modal.header}}
  {{#modal.body}}
    <div class="row">
      {{#each (repeat lipsumCount)}}
        {{lipsum}}
      {{/each}}
    </div>
  {{/modal.body}}
  {{#modal.footer}}
    <span>Footer</span>
  {{/modal.footer}}
{{/one-modal}}