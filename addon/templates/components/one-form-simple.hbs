{{#bs-form
  submitOnEnter=false
  class=_formClasses
  as |form|
}}
  {{one-form-fields
    bsForm=form
    fields=currentFields
    formValues=formValues
    inputChanged=(action "inputChanged")
    onFocusOut=(action "focusOut")
    disabled=_disabled
  }}

  {{#if submitButton}}
    <div class="row">
      <div class={{layoutConfig.formSubmitColumns}}>
        {{#one-button
          type="primary"
          buttonType="submit"
          onClick=(action "submit")
          disabled=(not _submitEnabled)
        }}
          {{submitText}}
        {{/one-button}}
      </div>
    </div>
  {{/if}}
{{/bs-form}}
