<div class="tags-input">
  <span class="stores-label">{{tt this "label"}}:</span>
  {{#each sortedStores as |store|}}
    {{workflow-visualiser/stores-list/store
      store=store
      mode=mode
      actionsFactory=actionsFactory
    }}
  {{/each}}
  {{#if (eq mode "edit")}}
    {{#bs-button
      class=(concat-classes createAction.className "input-element")
      onClick=createAction.executeCallback
      size="sm"
    }}
      {{one-icon icon=createAction.icon}}
      {{createAction.title}}
    {{/bs-button}}
  {{/if}}
</div>
{{yield}}
