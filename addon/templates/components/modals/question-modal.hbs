{{#global-modal
  classNames="question-modal"
  allowClose=(not isSubmitting)
  as |modal|
}}
  
  {{#modal.header}}
    <h1>
      {{#if headerIcon}}
        {{one-icon icon=headerIcon}}
      {{/if}}
      <span class="one-label">{{headerText}}</span>
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    {{#each descriptionParagraphs as |paragraph|}}
      <p class={{paragraph.className}}>{{paragraph.text}}</p>
    {{/each}}
  {{/modal.body}}

  {{#modal.footer class="btn-toolbar"}}
    {{#bs-button
      type="default"
      class="question-no"
      onClick=modal.close
      disabled=isSubmitting
    }}
      {{noButtonText}}
    {{/bs-button}}
    {{#one-spin-button
      class=(concat-classes "btn question-yes" yesButtonClassName)
      action=(action "submit" modal.submit)
    }}
      {{yesButtonText}}
    {{/one-spin-button}}
  {{/modal.footer}}

{{/global-modal}}
