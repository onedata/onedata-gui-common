{{!-- TODO: VFS-10331 unify modal layout in zone and provider --}}
{{#global-modal
  classNames=(concat-classes
    "charts-dashboard-editor-modal"
    (concat "mode-" mode)
    (if (eq mode "view") "without-footer modal-content-overlay with-close-button")
  )
  allowClose=(not isSubmitting)
  modalId=modalId
  size="full"
  as |modal|
}}
  {{#modal.header}}
    <h1>
      {{tt this (concat "header." dashboardOwnerType)}}
    </h1>
  {{/modal.header}}

  {{#modal.body}}
    {{atm-workflow/charts-dashboard-editor
      dashboardModel=dashboardModel
      isReadOnly=(eq mode "view")
    }}
  {{/modal.body}}

  {{#if (not-eq mode "view")}}
    {{#modal.footer class="btn-toolbar"}}
      {{#bs-button
        type="default"
        class="btn-cancel"
        onClick=(action "cancel" modal.close)
        disabled=isSubmitting
      }}
        {{tt this (concat "buttons.cancel." mode)}}
      {{/bs-button}}

      {{#one-button
        type="primary"
        buttonType="submit"
        class="btn-submit"
        onClick=(action "submit" modal.submit)
      }}
        {{tt this "buttons.submit"}}
      {{/one-button}}
    {{/modal.footer}}
  {{/if}}

{{/global-modal}}
