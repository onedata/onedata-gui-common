<h1>
  <span class="one-label">
    {{tt this "title"}}
  </span>
</h1>
<table class="table table-condensed table-info">
  <tr class="row-with-input">
    <td class="property-name">{{tt this "name"}}</td>
    <td class="property-value">
      {{one-clipboard-line
        size="sm"
        value=space.name
        showText=false
        btnType="success"
      }}
    </td>
  </tr>
  <tr class="row-with-input">
    <td class="property-name">{{tt this "id"}}</td>
    <td class="property-value">
      {{one-clipboard-line
        size="sm"
        value=space.entityId
        showText=false
        btnType="success"
      }}
    </td>
  </tr>
  <tr class="row-with-text">
    <td class="property-name">{{tt this "creator"}}</td>
    <td class="property-value">
      {{#truncated-string}}
        <span class="user-fullname">{{or owner.fullName "—"}}</span>
        {{#if owner.username}}
          <span class="user-username">({{owner.username}})</span>
        {{/if}}
      {{/truncated-string}}
    </td>
  </tr>
  <tr class="row-with-text">
    <td class="property-name">{{tt this "creationTime"}}</td>
    <td class="property-value">
      {{or creationTime "—"}}
    </td>
  </tr>
</table>
<div class="space-links-container">
  {{#if showLinkToRestApiModal}}
    <a {{action "openRestApiModal"}} class="space-info-link rest-api-link clickable">
      <span>{{tt this "openRestApi"}}</span>
      {{one-icon icon="rest"}}
    </a>
    {{#if showLinkToFileBrowser}} 
      <span class="col-separator"></span>
    {{/if}}
  {{/if}}
  {{#if showLinkToFileBrowser}}
    <a 
      href={{linkToFileBrowser}} 
      class="space-info-link file-browser-link clickable"
      onclick={{action "openFileBrowser"}}
    >
      <span>{{tt this "openFileBrowser"}}</span>
      {{one-icon icon="link-external"}}
    </a>
    {{#if showLinkToSpace}}
      <span class="col-separator"></span>
    {{/if}}
  {{/if}}
  {{#if showLinkToSpace}}
    <a href={{linkToSpace}} class="space-info-link space-link clickable">
      {{tt this "openSpace"}}
      {{one-icon icon="link-external"}}
    </a>
  {{/if}}
</div>
