{{#if label}}
  <div class="clipboard-line-label">
    <strong>{{label}}</strong>
  </div>
{{/if}}

<div class="input-group {{if size (concat "input-group-" size)}}">
  <input
    type="text"
    class="clipboard-input form-control"
    value={{value}}
    readonly
  >
  <div class="input-group-btn">
    {{#one-copy-button
      class=(concat "btn btn-" (or btnType "default"))
      parentElementId=elementId
      localTarget=".clipboard-input"
    }}
    {{one-icon icon="clipboard-copy"}} {{tt this "copyBtn"}}
  {{/one-copy-button}}
  </div>
</div>
