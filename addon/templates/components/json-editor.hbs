<textarea
  id={{inputId}}
  value={{value}}
  oninput={{action "onChange" value="target.value"}}
  placeholder={{placeholder}}
  disabled={{disabled}}
  readonly={{if readonly "readonly"}}
  spellcheck="false"
  onblur={{action onFocusLost}}
  class="form-control json-editor-textarea no-resize {{inputClassName}}"></textarea>
{{#if (and isErrorMsgVisible (eq isValid false))}}
  <div class="form-message text-right">{{tt this "errorMsg"}}</div>
{{/if}}
