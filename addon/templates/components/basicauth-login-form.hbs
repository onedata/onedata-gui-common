<div class="row text-center">
  <div class="col-xs-12">
    {{#bs-form class="form-horizontal"
      onSubmit=(action "submitLogin" username password)
      formLayout="horizontal"
      as |form|
    }}
      {{#form.group class=(if areCredentialsInvalid "has-error")}}
        <div class="input-group with-icon-addon">
          <div class="input-group-addon">
            {{one-icon icon="user"}}
          </div>
          {{one-way-input username
            class="form-control login-username"
            update=(action (mut username))
            placeholder="Username"
            disabled=isDisabled
          }}
        </div>
      {{/form.group}}
      {{#form.group class=(if areCredentialsInvalid "has-error")}}
        <div class="input-group with-icon-addon">
          <div class="input-group-addon">
            {{one-icon icon="lock"}}
          </div>
          {{one-way-password password
            class="form-control login-lock"
            update=(action (mut password))
            placeholder="Password"
            disabled=isDisabled
          }}
        </div>
      {{/form.group}}
      <div class="login-error-message{{if areCredentialsInvalid " active" ""}}">Invalid username and/or password.</div>
      <div class="row text-center">
        {{#if backButtonAction}}
          <button type="button" class="btn btn-warning back-button" {{action "backAction"}}>
            {{one-icon icon="arrow-right"}}
            {{t 'components.basicauthLoginForm.back'}}
          </button>
        {{/if}}
        {{#one-spin-button class="btn btn-primary"
          buttonStyle="expand-left"
          action=(action "submitLogin" username password)
        }}
          {{t 'components.basicauthLoginForm.signIn'}}
        {{/one-spin-button}}
      </div>
    {{/bs-form}}    
  </div>
</div>
