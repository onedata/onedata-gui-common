{{#render-later triggerRender=open}}
  {{#one-webui-popover
    class="block-settings-popover"
    onHide=(action "close")
    popoverTrigger="manual"
    padding=true
    triggerSelector=(or
      triggerSelector
      parentSelector
      "body"
    )
    renderInPlace=true
    open=open
    as |popover|
  }}
    {{#click-outside
      action=popover.hide
      except-selector=clickOutsideExceptSelector
    }}
      {{query-builder/block-selector
        mode="edit"
        editBlock=queryBlock
        onBlockReplace=(action "blockReplace" (action (mut open) false))
      }}
    {{/click-outside}}
  {{/one-webui-popover}}
{{/render-later}}
