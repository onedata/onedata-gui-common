<OneDropdown
  @triggerClass={{concat-classes "small comparator-value truncate dropdown-editor-trigger" guid}}
  @dropdownClass="small ember-basic-dropdown-content-comparator-value over-popover-over-modals dropdown-editor-options"
  @options={{options}}
  @selected={{value}}
  @renderInPlace={{false}}
  @placeholder={{tt this "dropdownPlaceholder"}}
  @searchEnabled={{true}}
  @onChange={{action onValueChange}}
  @onClose={{action onFinishEdit}}
  @onBlur={{action "onSelectorBlur"}}
  as |itemValue|
>
  {{if (eq (typeof itemValue) "number") (format-number itemValue) itemValue}}
</OneDropdown>
