{{#one-collapsible-list as |list|}}
  {{#each sortedItems as |item|}}
    {{#list.item class="resource-item" as |listItem|}}
      {{#listItem.header tagName=(if item.link "a" "div") href=item.link isCollapsible=false}}
        {{#if item.icon}}
          <span 
            class="item-icon-container icon-container popover-info-trigger"
            {{action
              (mut item.itemInfoOpened)
              (not item.itemInfoOpened)
              bubbles=false
            }}
            onmouseover={{action "itemInfoHovered" item true}}
            onmouseleave={{action "itemInfoHovered" item false}}
          >
            {{flippable-icons
              iconName=item.icon
              iconColor=iconColor
              isHovered=item.hasItemInfoHovered
              suppressFlipping=itemInfoOpened
            }}
            {{!-- {{one-icon 
              class="item-icon tmp" 
              icon=item.icon
            }} --}}
            {{#one-tooltip
              placement="top"
              arrowPlacement="left"
              triggerEvents="hover"
            }}
            {{#if item.conflictingLabelSource}}
              {{name-conflict
                item=item.conflictingLabelSource
              }}
            {{else}}
              {{item.label}}
            {{/if}}
            {{/one-tooltip}}
          </span>
        {{/if}}
        {{#if item.conflictingLabelSource}}
          {{name-conflict
            item=item.conflictingLabelSource
            tagName="span"
            class="one-label"
            onChange=(action "itemInfoHovered" item true)
          }}
        {{else}}
          <span class="one-label">{{item.label}}</span>
        {{/if}}
        {{#if item.actions.length}}
          {{actions-toolbar
            isMinimized=true
            toolbarClasses=""
            toolbarToggleClasses="btn-menu-toggle"
            dropdownPlacement="auto"
            actionsArray=item.actions
          }}
        {{/if}}
      {{/listItem.header}}
    {{/list.item}}
    {{#record-info-popover
      isOpened=item.itemInfoOpened
      triggerSelector=(concat "#" elementId " .item-icon-container")
    }}
      {{space-info-content
        space=item.space
      }}
    {{/record-info-popover}}
  {{/each}}
{{/one-collapsible-list}}
{{yield}}
