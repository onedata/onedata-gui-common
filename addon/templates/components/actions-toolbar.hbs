{{#one-collapsible-toolbar
  isMinimized=isMinimized
  dropdownPlacement=dropdownPlacement
  minimumFullWindowSize=minimumFullWindowSize
  class="btn-toolbar"
  as |dropdown|}}
  {{#each actionsArray as |act|}}
    {{#dropdown.item
      buttonStyle=act.buttonStyle
      triggerClasses=act.class
      itemAction=act.action
      class=(if act.disabled "disabled")
    }}
      {{one-icon icon=act.icon}}
      <span class="text">{{act.title}}</span>
    {{/dropdown.item}}
  {{/each}}
{{/one-collapsible-toolbar}}
