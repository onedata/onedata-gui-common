{{#each actionsArray as |act|}}
  <li class={{concat-classes (if act.separator "separator") (if act.disabled "disabled")}}>
    {{#if act.separator}}
      <a>
        <span class="one-label">{{act.title}}</span>
      </a>
    {{else}}
      <a class="clickable {{act.class}}" onClick={{action "triggerAction" act.action}}>
        {{#if act.icon}}
          {{one-icon icon=act.icon}}
        {{/if}}
        <span class="one-label">{{act.title}}</span>
      </a>
    {{/if}}
  </li>
{{/each}}
