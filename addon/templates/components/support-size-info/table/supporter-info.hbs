<span
  class="supporter-info-container"
  onMouseEnter={{action "itemInfoHovered" true}}
  onMouseLeave={{action "itemInfoHovered" false}}
>
  <span
    class={{concat-classes
      "item-icon-container icon-container popover-info-trigger"
      (concat "space-" spaceId)
    }}
    {{action
      (mut itemInfoOpened)
      (not itemInfoOpened)
      bubbles=false
    }}
  >
    {{flippable-icons
      iconName="space"
      isHovered=hasItemInfoHovered
      suppressFlipping=itemInfoOpened
    }}
  </span>
  {{#truncated-string}}
    {{get record column.propertyName}}
  {{/truncated-string}}
</span>
{{#record-info-popover
  isOpened=itemInfoOpened
  triggerSelector=(concat ".item-icon-container.space-" spaceId)
}}
  {{space-info-content
    space=space
  }}
{{/record-info-popover}}