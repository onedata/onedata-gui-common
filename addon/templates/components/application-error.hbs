{{one-icon tagName="div" icon="sign-warning" class="application-error-icon"}}
<h2 class="application-error-message">
  {{t "components.applicationError.message"}}
</h2>
{{#if _reasonDetails}}
  <h3>
    <a role="button" tabindex="0" class="show-error-details" {{action "toggleShowDetails"}}>
      {{t (concat "components.applicationError." (if showDetails "hideDetails" "showDetails"))}}
    </a>
  </h3>
  <div class="error-details sm-row {{if showDetails "active"}}">
    {{_reasonDetails}}
  </div>
{{else}}
  <h3>
    {{t "components.applicationError.noDetails"}}
  </h3>
{{/if}}
