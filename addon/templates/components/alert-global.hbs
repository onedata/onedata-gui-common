{{#bs-modal
  class=(concat-classes "alert-global" alert.type)
  open=open
  onHide=(action "onHide")
  as |modal|
}}
  {{#modal.header}}
    <h1>
      {{one-icon icon=icon}}
      <span class="one-label">{{header}}</span>
    </h1>
  {{/modal.header}}
  {{#modal.body}}
    {{text}}
  {{/modal.body}}
  {{#modal.footer class="btn-toolbar"}}
    {{#bs-button
      onClick=(action modal.close)
      class=closeBtnClass
    }}
      {{tt this "close"}}
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
