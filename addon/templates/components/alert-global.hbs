{{#bs-modal
  class="alert-global"
  open=open
  onHide=(action "onHide")
  as |modal|
}}
  {{#modal.header}}
    <h1>Error</h1>
  {{/modal.header}}
  {{#modal.body}}
    {{text}}
  {{/modal.body}}
  {{#modal.footer}}
    {{#bs-button
      onClick=(action modal.close)
      class="btn-danger"
    }}
      Close
    {{/bs-button}}
  {{/modal.footer}}
{{/bs-modal}}
