<CopyButton
  @clipboardText={{clipboardText}}
  @clipboardTarget={{clipboardTarget}}
  @container=".modal-content, body:not(.modal-open)"
  @success={{success}}
  @error={{error}}
  class={{class}}
>
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{one-icon icon="browser-copy"}} {{tt this "copyBtn"}}
  {{/if}}
</CopyButton>
