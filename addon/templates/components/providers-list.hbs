{{#one-collapsible-list filtrationChanged=(action "providersFilter") as |list|}}
  {{list.header class="align-to-icon" isCollapsible=false title=title}}
  {{#each providersData as |providerData|}}
    {{#list.item
      isCollapsible=false
      selectionValue=providerData.provider
      click=(action "providerClick" providerData.provider) as |listItem|
    }}
      {{#listItem.header}}
        {{providers-list/provider-item
          listItem=listItem
          color=providerData.color
          provider=providerData.provider
          providerActions=providerActions
          selectedSpace=selectedSpace
          showSelectedSpaceSupportSize=showSelectedSpaceSupportSize
          showSupportedSpacesCount=showSupportedSpacesCount
        }}
      {{/listItem.header}}
    {{/list.item}}
  {{/each}}
{{/one-collapsible-list}}
