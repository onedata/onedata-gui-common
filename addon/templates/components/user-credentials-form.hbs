{{#bs-form
  submitOnEnter=false
  class=(concat-classes "col-xs-12 col-sm-8 col-md-6 col-lg-4 form-horizontal" (if centered "col-centered"))
  as |form|
}}
  {{one-form-fields
    bsForm=form
    fields=currentFields
    formValues=formValues
    inputChanged=(action "inputChanged")
    onFocusOut=(action "focusOut")
  }}

  {{#if changingPassword}}
    <div class="row">
      <div class="nowrap {{layoutConfig.formSubmitColumns}}">
        {{#one-button
          type="primary"
          buttonType="submit"
          onClick=(action "submit")
          disabled=(not isValid)
        }}
          {{tt this "confirmChange"}}
        {{/one-button}}
        &nbsp;
        {{#bs-button class="btn btn-default" onClick=(action "cancel")}}
          {{tt this "cancel"}}
        {{/bs-button}}
      </div>
    </div>
  {{/if}}
{{/bs-form}}
