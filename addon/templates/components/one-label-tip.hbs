{{#one-icon icon=icon}}
  {{#if hasBlock}}
    {{#one-tooltip
      class=tooltipClassInternal
      placement=placement
      arrowPlacement=arrowPlacement
      triggerEvents=triggerEvents
    }}
      {{yield}}
    {{/one-tooltip}}
  {{else}}
    {{one-tooltip
      class=tooltipClassInternal
      title=title
      placement=placement
      arrowPlacement=arrowPlacement
      triggerEvents=triggerEvents
    }}
  {{/if}}
{{/one-icon}}
