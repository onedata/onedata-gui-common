<div class="world-map light">
  <div class="container content-info-content-container">
    <div class="row text-center">
      <div class="col-xs-12">
        <h1>{{header}}</h1>
        {{#if subheader}}
          <h2>{{subheader}}</h2>
        {{/if}}
        {{#if text}}
          <p class="lead">{{text}}</p>
        {{/if}}
      </div>
    </div>
    {{#if imagePath}}
      {{one-image 
        imagePath=imagePath 
        imageTextClass=imageTextClass 
        imageText=imageText}}
    {{/if}}
    {{#if hasBlock}}
      <div class="row row-yield">
        {{yield}}
      </div>
    {{/if}}
    {{#if buttonAction}}
      <div class="row text-center">
        <div class="col-xs-12">
          {{#one-spin-button class=(concat "btn btn-primary " buttonClass) action=(action buttonAction)}}
            {{buttonLabel}}
          {{/one-spin-button}}
        </div>
      </div>
    {{/if}}
  </div>
</div>
