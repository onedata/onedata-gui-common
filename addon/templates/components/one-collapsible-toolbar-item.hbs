{{!-- TODO: add support for route links --}}
{{#if isMinimized}}
<a class="minimized-item clickable {{triggerClasses}}" onClick={{action "runAction" false}}>
  {{yield}}
</a>
{{else}}
  {{#if (eq buttonType "bs")}}
    {{#bs-button
      class=(concat-classes
        triggerClasses
        (concat " btn " buttonSizeClass)
        (if isDisabled "disabled")
      )
      type=buttonStyle
      onClick=(action "runAction" true)
      bubble=true
    }}
      {{yield}}
    {{/bs-button}}
  {{/if}}
{{/if}}
