{{#if isMinimized}}
<a class="minimized-item clickable {{triggerClasses}}" onClick={{action "runAction" false}}>
  {{yield}}
</a>
{{else}}
  {{#if (eq buttonType "bs")}}
    {{#bs-button class=(concat triggerClasses (concat " btn " buttonSizeClass)) type=buttonStyle onClick=(action "runAction" true)}}
      {{yield}}
    {{/bs-button}}
  {{/if}}
{{/if}}
