{{#if isInViewMode}}
  {{valueForViewMode}}
{{else}}
  <input
    id={{fieldId}}
    class="form-control"
    type={{inputType}}
    disabled={{not isEffectivelyEnabled}}
    placeholder={{or placeholder null}}
    onblur={{action "focusLost"}}
    oninput={{action "valueChanged" value="target.value"}}
    value={{value}}
    step={{step}}
  />
{{/if}}
{{yield}}
