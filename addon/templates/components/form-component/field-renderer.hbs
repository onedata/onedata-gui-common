{{#if field.label}}
  <label class="control-label" for={{fieldId}}>{{field.label}}{{#if field.addColonToLabel}}:{{/if}}</label>
{{/if}}
{{#component field.fieldComponentName field=field fieldId=fieldId}}
  {{#if (and showValidationState field.withValidationIcon)}}
    <div class="form-control-feedback glyphicon glyphicon-{{if isValid "ok" "remove"}}"></div>
  {{/if}}
{{/component}}
{{#if (and showValidationState error)}}
  <div class="field-message">{{error.message}}</div>
{{/if}}
{{yield}}
