{{#promise-proxy-container proxy=stateProxy sizeClass="sm"}}
  <div class="canvas-area">
    {{#if hasDataToShow}}
      {{one-echart option=echartState}}
    {{else}}
      <div class="no-data-message">
        <div class="no-data-img"></div>
        {{tt this "noDataToShow"}}
      </div>
    {{/if}}
  </div>
  {{#if title}}
    <div class="title-area">
      <span class="title-content">{{title}}</span>
      {{#if titleTip}}
        <span class="space"></span>
        {{one-label-tip title=titleTip}}
      {{/if}}
    </div>
  {{/if}}
{{/promise-proxy-container}}
