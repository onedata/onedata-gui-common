{{#if (and outerText (eq outerTextSide "left"))}}
  <div class="outer-text">{{outerText}}</div>
{{/if}}
{{#one-icon icon=icon class="one-icon-status"}}
  {{#if innerText}}
    <div class="inner-text">{{innerText}}</div>
  {{/if}}
{{/one-icon}}
{{#if (and outerText (eq outerTextSide "right"))}}
  <div class="outer-text">{{outerText}}</div>
{{/if}}
{{#if subIcon}}
  {{one-icon class=(concat-classes "sub-status-icon" subIconClass) icon=subIcon}}
{{/if}}
{{#if (and enabled hint)}}
  {{one-tooltip
    title=hint
    placement="top"
  }}
{{/if}}
