{{#if idProvidingEditorState}}
  {{component idProvidingEditorState.editorComponentName
    stateManager=stateManager
    editorId=idProvidingEditorState.id
    onRemove=(action "idProvidingCancelled")
  }}
{{else}}
  {{#atm-workflow/value-editors/file/selector
    class="add-item-trigger action-link"
    atmDataSpec=itemAtmDataSpec
    editorContext=editorContext
    allowManyFiles=true
    onFilesSelected=(action "filesSelected")
    onIdProvidingStarted=(action "idProvidingStarted")
  }}
    {{tt this "label"}}
  {{/atm-workflow/value-editors/file/selector}}
{{/if}}
