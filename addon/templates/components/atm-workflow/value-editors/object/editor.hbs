{{#atm-workflow/value-editors/commons/editor-box
  editorState=editorState
  onRemove=onRemove
  class=(concat-classes "editor-with-json" (if (not isValid) "invalid"))
  as |editorBox|
}}
  {{#if (eq editorBox.section "content")}}
    {{ember-ace
      editorClass="full-height"
      value=editableValue
      worker="ace/mode/json_worker"
      mode="ace/mode/json"
      theme="ace/theme/textmate"
      tabSize=2
      useWrapMode=true
      highlightActiveLine=true
      showLineNumbers=true
      showPrintMargin=false
      update=(action "valueChanged")
      readOnly=isDisabled
    }}
  {{/if}}
{{/atm-workflow/value-editors/commons/editor-box}}
