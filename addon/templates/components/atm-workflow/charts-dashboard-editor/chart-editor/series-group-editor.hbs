<div class="form-column">
  {{atm-workflow/charts-dashboard-editor/chart-editor/series-group-editor-form
    seriesGroup=chartElement
    actionsFactory=actionsFactory
    isReadOnly=isReadOnly
  }}
</div>
<div class="details-column">
  <h3 class="details-header">{{tt this "attachedSeries"}}</h3>
  {{#if chartElement.series.length}}
    {{atm-workflow/charts-dashboard-editor/chart-editor/series-list
      chart=chart
      seriesSource=chartElement
      actionsFactory=actionsFactory
      isReadOnly=isReadOnly
    }}
  {{else}}
    <p class="empty-details-info">{{tt this "noSeriesAttached"}}</p>
  {{/if}}
</div>
