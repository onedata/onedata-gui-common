{{one-file-icon
  class="details-icon"
  fileType=value.type
  symbolicLinkTargetType=symbolicLinkTargetType
}}

<div class="details-content">
  {{#if urlProxy.content}}
    <a
      class="file-name details-title clickable navy"
      href={{urlProxy.content}}
      target={{or context.linkTarget "_top"}}
    >
      {{#if value.name}}{{value.name}}{{else}}<em>{{tt this "unknown"}}</em>{{/if}}
    </a>
  {{else}}
    <span class="file-name details-title">
      {{#if value.name}}{{value.name}}{{else}}<em>{{tt this "unknown"}}</em>{{/if}}
    </span>
  {{/if}}

  <ul class="details-property-list">
    <li class="property-row path-property">
      <span class="property-label">{{tt this "path"}}:</span>
      <span class="property-value">
        {{#if pathProxy.isPending}}
          <em>{{tt this "loading"}}</em>
        {{else if (eq pathProxy.content null)}}
          <em>{{tt this "unknown"}}</em>
        {{else}}
          {{pathProxy.content}}
        {{/if}}
      </span>
    </li>
    <li class="property-row size-property">
      <span class="property-label">{{tt this "size"}}:</span>
      <span class="property-value">
        {{#if sizeProxy.isPending}}
          <em>{{tt this "loading"}}</em>
        {{else if (eq sizeProxy.content null)}}
          <em>{{tt this "unknown"}}</em>
        {{else}}
          {{sizeProxy.content}}
        {{/if}}
      </span>
    </li>
  </ul>
</div>
