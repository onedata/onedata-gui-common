{{one-icon class=(concat-classes "dataset-icon details-icon" iconClass) icon=icon}}

<div class="details-content">
  {{#if urlProxy.content}}
    <a
      class="dataset-name details-title clickable"
      href={{urlProxy.content}}
      target={{or context.linkTarget "_top"}}
    >
      {{#if name}}{{name}}{{else}}<em>{{tt this "unknown"}}</em>{{/if}}
    </a>
  {{else}}
    <span class="dataset-name details-title">
      {{#if name}}{{name}}{{else}}<em>{{tt this "unknown"}}</em>{{/if}}
    </span>
  {{/if}}

  <div class="property-row root-file-path-property">
    <strong class="property-label">{{tt this "rootFilePath"}}:</strong>
    <span class="property-value">
      {{#if value.rootFilePath}}
        {{#if rootFileUrlProxy.content}}
          <a
            class="clickable"
            href={{rootFileUrlProxy.content}}
            target={{or context.linkTarget "_top"}}
          >
            {{value.rootFilePath}}
          </a>
        {{else}}
          {{value.rootFilePath}}
        {{/if}}
      {{else}}
        <em>{{tt this "unknown"}}</em>
      {{/if}}
    </span>
  </div>
</div>
