{{!-- TODO change to div class one list item  --}}
<ul class="one-list">
  <li class="one-list-item search-bar-item">
    <div class="item-header form-group form-group-sm form-group-light">
      <div class="input-group with-icon-addon">
        {{search-bar search=(action (mut query)) class="form-control"}}
        <div class="input-group-addon">
          {{one-icon icon="search"}}
        </div>
      </div>
    </div>
  </li>
  {{#each items as |item|}}
    {{#if (match-query item.name query)}}
      {{yield item}}
    {{/if}}
  {{/each}}
</ul>
