{{partial "onedata-before-template"}}

{{#app-layout
  appModel=model
  as |section|
}}
  {{#if (eq section "sidebar")}}
    {{outlet "sidebar"}}
  {{else if (eq section "content")}}
    {{outlet "content"}}
  {{/if}}
{{/app-layout}}

{{authentication-error-modal
  opened=authenticationErrorOpened
  close=(action (mut authenticationErrorOpened) false)
  authenticationErrorReason=authenticationErrorReason
  authenticationErrorState=authenticationErrorState
}}
